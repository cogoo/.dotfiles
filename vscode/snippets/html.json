{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
  // }
  "Jinja If Condition": {
    "prefix": ["jinja-if", "if-jinja"],
    "description": "If condition in Jinja",
    "body": [
      "{% if ${1:variableName} %}",
      "  $0",
      "{% endif %}"
    ]
  },
  "Jinja If Condition oneline": {
    "prefix": ["jinja-if oneline", "oneline if-jinja"],
    "description": "If condition in Jinja",
    "body": [
      "{% if ${1:variableName} %} $0 {% endif %}"
    ]
  },
  "Jinja If / Else Condition": {
    "prefix": ["jinja-if-else", "if-else-jinja"],
    "description": "If / Else condition in Jinja",
    "body": [
      "{% if ${1:variableName} %}",
      "  $1",
      "{% else %}",
      "  $2",
      "{% endif %}"
    ]
  },
  "Jinja If / Else Condition oneline": {
    "prefix": ["jinja-if-else oneline", "oneline if-else-jinja"],
    "description": "If / Else condition in Jinja",
    "body": [
      "{% if ${1:variableName} %} $1 {% else %} $2 {% endif %}"
    ]
  },
  "Jinja Include": {
    "prefix": "jinja-include",
    "description": "Include partial template in Jinja",
    "body": [
      "{% include \"${1:filePath}\" %}"
    ]
  }
}